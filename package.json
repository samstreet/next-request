{
  "name": "next-form-request",
  "version": "2.0.1",
  "description": "Laravel-inspired Form Request validation for Next.js API routes",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./zod": {
      "types": "./dist/adapters/validators/ZodAdapter.d.ts",
      "import": "./dist/adapters/validators/ZodAdapter.mjs",
      "require": "./dist/adapters/validators/ZodAdapter.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "next.js",
    "nextjs",
    "validation",
    "form-request",
    "laravel",
    "api",
    "typescript"
  ],
  "author": "Sam Street <samstreet.dev@gmail.com> (https://github.com/samstreet/next-request)",
  "license": "MIT",
  "peerDependencies": {
    "next": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^2.0.0",
    "next": "^14.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "zod": "^3.22.0"
  }
}
